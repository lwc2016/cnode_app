{% extends "../commons/layout.njk" %}
{% block css %}
	<link rel="stylesheet" href="/css/index.css">
{% endblock %}
{% block content %}
	<div>
		<div id="tag">
			<a href="/" class="tag_item {{tag | tag_active('all')}}">全部</a>
			<a href="/?tab=good" class="tag_item {{tag | tag_active('good')}}">精华</a>
			<a href="/?tab=share" class="tag_item {{tag | tag_active('share')}}">分享</a>
			<a href="/?tab=ask" class="tag_item {{tag | tag_active('ask')}}">问答</a>
			<a href="/?tab=job" class="tag_item {{tag | tag_active('job')}}">招聘</a>
			<a href="/?tab=dev" class="tag_item {{tag | tag_active('dev')}}">客户端测试</a>
		</div>
	</div>
	<div id="list">
		{% for item in list %}
			<div class="list_item">
				<img class="author_logo" src="{{item.author.avatar_url}}" alt="">
				<span class="count_num">
					<i class="reply_count">{{item.reply_count}}</i><i class="divide">/</i><i class="visit_count">{{item.visit_count}}</i>
				</span>
				<span class="tag">{{item.tab | cnode_tag}}</span>
				<a href="{{'/topic/' + item.id}}" class="title">{{item.title}}</a>
				<span class="time">{{item.last_reply_at | distance_time}}</span>
			</div>
		{% endfor %}
	</div>
	<script>
		console.log({{list | dump | safe}})
	</script>	
{% endblock %}